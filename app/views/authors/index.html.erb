<h1>Listing Authors</h1>
 
<%= link_to 'New Author', new_author_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Homepage</th>
    <th colspan="3"></th>
    <th></th>
  </tr>
 
  <% @authors.each do |author| %>
    <tr>
      <td><%= author.name%></td>
      <td><%= link_to author.homepage, author.homepage %></td>
      <td><%= link_to 'More Information', author_path(author) %></td>
      <td><%= link_to 'Edit', edit_author_path(author) %></td>
      <td><%= link_to 'Destroy', author_path(author), method: :delete, 
                                                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Front Page', root_path %>